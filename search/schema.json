{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "from": {
      "description": "starting item to return in hits field",
      "type": "integer",
      "default": 0
    },
    "size": {
      "description": "number of items to return in hits field",
      "type": "integer",
      "default": 10
    },

    "sort": {
      "description": "sort the specified fields",
      "type": "object",
      "patternProperties": {
        "^.*$": {
          "type": "string",
          "enum": ["asc", "desc"],
          "default": "asc"
        }
      }
    },
    "_source": {
		"description": "if false, no source is returned",
		"type": "boolean",
		"default": true
	},
	"explain":{
		"type": "boolean",
		"description": "provides a detailed explanation of relevance sorting",
		"default": false 
	},
    "query": {
      "type": "object",
      "properties": {
        "query_string": {
          "type": "object",
          "properties": {
            "query": {
              "type": "string",
              "examples": ["fund_name:ishares edge global"]
            },
            "default_operator": {
              "type": "string",
              "enum": ["AND", "OR"],
              "default": "AND"
            }
          }
        }
      }
    }
  }
}
